=== Installation ===
To install the profile, run:
<pre>
sudo apt-get install apparmor-profile-icedove
</pre>


=== Wiki updates ===
Last update: September 22, 2014.


=== Profile ===
<pre>
# Last Modified: Wed Sep 17 19:26:46 UTC 2014
#include <tunables/global>

/usr/lib/icedove/icedove {
	#include <abstractions/base>
	#include <abstractions/user-tmp>
	#include <abstractions/bash>
	#include <abstractions/fonts>
	#include <abstractions/kde>
	#include <abstractions/gnome>
	#include <abstractions/audio>
	#include <abstractions/freedesktop.org>
	#include <abstractions/user-download>

	capability sys_ptrace,

	deny / r,
	deny /etc/host.conf r,
	deny /etc/hosts r,
	deny /etc/nsswitch.conf r,
	deny /etc/passwd r,
	deny /etc/fstab r,

	deny /sys/devices/system/cpu/ r,
	deny /sys/devices/system/cpu/present r,
	deny /var/lib/dbus/machine-id r,

	## Required to choose application for "Open link in browser" ##
	## for the first time. Not necessary afterwards ###############
	@{HOME}/ r,
	@{HOME}/** r,
	###############################################################
	
	@{HOME}/.mozilla/ rwk,
	@{HOME}/.mozilla/** rwk,
	@{HOME}/.icedove/ rwk,
	@{HOME}/.icedove/** mrwk,
	@{HOME}/.kde/share/** rw,
	@{HOME}/.config/** rw,
	@{HOME}/.fontconfig/ rwk,
	@{HOME}/.local/share/ r,
	@{HOME}/.local/share/applications/ rwk,
	@{HOME}/.local/share/applications/* rwk,
	@{HOME}/.local/share/mime/ rwk,
	@{HOME}/.local/share/mime/** rwk,
	@{HOME}/.cache/ r,
	@{HOME}/.cache/** rwk,
	@{HOME}/.gnupg/* lrwkcix,
	@{HOME}/.Xauthority r,
	@{HOME}/tor-browser_*/Browser/firefox Px,

	/etc/drirc r,
	/etc/ld.so.cache r,
	/etc/resolv.conf r,
	/etc/mailcap r,
	/etc/icedove/pref/ r,
	/etc/icedove/pref/* r,
	/etc/X11/cursors/* r,
	/etc/mime.types r,
	/etc/gai.conf r,
	/etc/xul-ext/enigmail.js rix,
	/etc/pkcs11/modules/ r,

	/bin/ps rix,
	/bin/bash rix,
	/bin/dash  rix,
	/bin/mknod rix,
	/bin/grep rix,
	/bin/chmod rix,
	/bin/mktemp rix,
	/bin/which rix,

	/dev/tty rw,
	/dev/vboxuser rw,
	/dev/dri/card0 rw,

	/lib/i386-linux-gnu/i686/cmov/libc-2.13.so r,
	/lib/i386-linux-gnu/libprocps.so.0.0.1 r,

	@{PROC}/ r,
	@{PROC}/[0-9]*/maps r,
	@{PROC}/tty/drivers r,
	@{PROC}/[0-9]*/stat r,
	@{PROC}/[0-9]*/status r,
	@{PROC}/[0-9]*/task/*/stat r,
